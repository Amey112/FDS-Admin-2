<% layout('layouts/boilerplate')%>

<% let srNo = 1 %> 
<% for (let user of users) {%>
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-1">
                    <%= srNo  %>
                    <% srNo += 1 %>  
                </div>
                <div class="col-4">
                    <p><%= user._id %> </p>
                </div>
                <div class="col-2">
                    <h5><%= user.name %> </h5>
                </div>
                <div class="col-3">
                    <h5><%= user.email %> </h5>
                </div>
                <div class="col-2">
                    <p>
                      <button class="btn btn-new-submit" type="button" data-bs-toggle="collapse" data-bs-target="#<%= user.name %>" aria-expanded="false">
                        More Info
                      </button>
                    </p>
                    
                </div>
                <div class="collapse" id="<%= user.name %>">
                    <div class="card card-body border-0">
                      <div class="row">
                          <div class="col-6 d-flex justify-content-center">
                              <img class="img-fluid" src="/avatar-img/default.png" alt="" width="150" heigth="150">
                          </div>
                          <div class="col-6">
                              <p>Location: <%= user.deliveryAddress ? user.deliveryAddress[0] : '' %> </p>
                          </div>
                      </div>
                    </div>
                  </div>
            </div>
              
        </div>
    </div>
<% } %>  